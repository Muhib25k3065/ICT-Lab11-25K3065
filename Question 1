#include <iostream>
using namespace std;

class Person {
	public:
		string name;
		int age;
		void display()
		{
			cout << "The name is " << name << " and the age is " << age << endl;
		}
};

class Student : public Person {
	public:
		int rollNumber;
		void showroll(){
			cout << "The roll number is " << rollNumber << endl;
		}
};

int main(){
	Student s1;
	s1.name = "Muhib";
	s1.age = 20;
	s1.rollNumber = 3065;
	s1.display();
	s1.showroll();
}
